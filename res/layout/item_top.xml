    <TextView android:layout_width="wrap_content"
              android:layout_marginTop="5dp"
              android:id="@+id/content"
              android:layout_marginLeft="8dp"
              android:text="content"
              android:textSize="15sp"
              android:lineSpacingMultiplier="1.2"
              android:textColor="@color/textColor"
              android:layout_below="@+id/head_top"
              android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:background="@color/activity_graybg"
          android:layout_below="@+id/content"
          android:id="@+id/line_two"
          android:layout_marginTop="5dp"
          android:layout_height="0.1dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_below="@+id/line_two"
                  android:gravity="center_vertical"
                  android:layout_height="35dp">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:padding="8dp"
                  android:gravity="center"
                  android:text="拨打电话"
                  android:id="@+id/btn_tel"
                  android:background="@drawable/btn_radio_red_shape_left"
                  android:textColor="@color/white"
                  android:layout_height="35dp"/>
        <View android:layout_width="0.1dp"
              android:background="@color/white"
              android:layout_height="20dp"></View>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:padding="8dp"
                  android:gravity="center"
                  android:visibility="gone"
                  android:text="收藏"
                  android:id="@+id/btn_favour"
                  android:background="@drawable/btn_radio_red_shape_center"
                  android:textColor="@color/white"
                  android:layout_height="35dp"/>
        <View android:layout_width="0.1dp"
              android:background="@color/white"
              android:layout_height="20dp"></View>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:padding="8dp"
                  android:gravity="center"
                  android:id="@+id/btn_nav"
                  android:text="路线导航"
                  android:background="@drawable/btn_radio_red_shape_right"
                  android:textColor="@color/white"
                  android:layout_height="35dp"/>
    </LinearLayout>
