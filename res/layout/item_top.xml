        <TextView android:layout_width="wrap_content"
                  android:text="诚信"
                  android:id="@+id/img_xinyong"
                  android:layout_marginRight="8dp"
                  android:textSize="13sp"
                  android:paddingRight="3dp"
                  android:layout_marginLeft="3dp"
                  android:layout_marginTop="8dp"
                  android:paddingBottom="1dp"
                  android:paddingTop="1dp"
                  android:paddingLeft="3dp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/button_color_orange_p"
                  android:background="@drawable/btn_org_text_shape"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="已认证"
                  android:layout_alignParentRight="true"
                  android:id="@+id/img_xiehui"
                  android:textSize="13sp"
                  android:paddingRight="3dp"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginRight="50dp"
                  android:gravity="center"
                  android:paddingBottom="1dp"
                  android:paddingTop="1dp"
                  android:paddingLeft="3dp"
                  android:textColor="@color/btn_green_press"
                  android:background="@drawable/btn_green_text_shape"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="80dp"
                   android:id="@+id/star"
                   android:visibility="gone"
                   android:scaleType="fitCenter"
                   android:layout_marginRight="8dp"
                   android:layout_below="@+id/img_xinyong"
                   android:layout_alignParentRight="true"
                   android:layout_height="wrap_content"/>
